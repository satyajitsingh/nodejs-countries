{% macro form_group_class(identifier, errors) %}
	{% set class = '' %}
	{% for error in errors %}
		{% if error.identifier == identifier %}
			{% set class = 'form-group-error' %}
		{% endif %}
	{% endfor %}
	{{class}}
{% endmacro %}

{% macro error_message(identifier, errors) %}
	{% for error in errors %}
		{% if error.identifier == identifier %}
			<p class="error-message">{{error.message}}</p>
		{% endif %}
	{% endfor %}
{% endmacro %}