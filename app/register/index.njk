{% extends "common/templates/layout.njk" %}
{% import "common/templates/includes/macros.njk" as m %}

{% block page_title %}
	Register User
{% endblock %}

{% block content %}
	
<main id="content" role="main">

	<div class="grid-row">
  		<div class="column-full">

		    <h1 class="heading-xlarge">
		      Some Useful Government Site
		    </h1>

		    <form action="/" method="post" class="form">

				<div class="form-group {{ m.form_group_class('name', errors) }}">
					<a name="name"></a>
			    	<label class="form-label" for="name" id="name">
			    		Full Name
				    	{{ m.error_message('name', errors) }}
			    	</label>
			    	<input class="form-control {{first_control_error_class}}" id="name" name="name" type="text" >
			    </div>

			    <div class="form-group {{ m.form_group_class('gender', errors) }}">
			    	<a name="gender"></a>
			    	
			    	
                    <div class="govuk-form-group">

                            <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                <h1 class="govuk-fieldset__heading">
                                Gender
                                </h1>
                            </legend>
                            <div class="govuk-radios">
                                <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="gender" name="gender" type="radio" value="male">
                                <label class="govuk-label govuk-radios__label" for="gender">
                                    Male
                                </label>
                                </div>
                                <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="gender-2" name="gender" type="radio" value="female">
                                <label class="govuk-label govuk-radios__label" for="gender-2">
                                    Female
                                </label>
                                </div>
                            </div>

                            </fieldset>
                            </div>


			    </div>
				<p>
			    <div class="form-group {{ m.form_group_class('age', errors) }}">
			    	<a name="age" ></a>
					<label class="form-label" for="age">
						Age
						{{ m.error_message('age', errors) }}
					</label>
					<input class="form-control {{age_control_error_class}}" id="age" name="age" type="text" >
				</div>

                 <div class="form-group {{ m.form_group_class('country', errors) }}">
			    	<a name="country" ></a>
					<label class="form-label" for="age">
						Country
						{{ m.error_message('age', errors) }}
					</label>
					</p>
                <p>
               <div>
                  <select id="country"  name="country" >
                     {% for app in countries %}
                        <option value="{{app.name}}">{{app.name}}</option>
                     {% endfor%}
                  </select>
               </div>
					
				</div>
				</p>

				
				<p>
			    <div class="form-group">
		      		<input type="submit" class="button" value="Submit">
		    	</div>
				</p>

		    </form>

		</div>
	</div>

 </main>
{% endblock %}
